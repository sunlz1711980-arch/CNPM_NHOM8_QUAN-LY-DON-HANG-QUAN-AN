def menu_quan_ly_kho():
    while True:
        print("\n=== QUẢN LÝ KHO ===")
        print("1. Nhập kho")
        print("2. Xem kho")
        print("3. Thêm công thức món")
        print("0. Quay lại")

        chon = input("Chọn: ")

        if chon == "1":
            nhap_kho()
        elif chon == "2":
            xem_kho()
        elif chon == "3":
            them_cong_thuc_mon()
        elif chon == "0":
            break
        else:
            print("❌ Lựa chọn không hợp lệ")
